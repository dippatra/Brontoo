<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:elevation="10dp"
    android:layout_height="81dp">
    <LinearLayout
        android:id="@+id/favourite_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/favourite_image"
            android:layout_width="22dp"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_favorite_unmarkerd"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/favourite_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_favourite"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_below="@id/favourite_container"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.3"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/watchlist_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/separator"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/watchlist_image"
            android:layout_width="22dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_playlist_unmarked"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/wathchlist_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:text="@string/add_watchList"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>